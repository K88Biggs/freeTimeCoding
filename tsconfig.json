{
  "compilerOptions": {
    "target": "ESNext",                         // Compile to modern JavaScript
    "module": "commonjs",                       // Use CommonJS modules (used in Node.js)
    "strict": true,                             // Enable strict type-checking
    "esModuleInterop": true,                    // Allow import/export compatibility
    "skipLibCheck": true,                       // Skip checking type definitions of libraries
    "forceConsistentCasingInFileNames": true,   // Prevent case mismatch bugs
    "outDir": "dist"                            // (Optional) Compiled JS files go here
  },
  "include": [
   "tests", 
   "playwright.config.ts",
   "pages",  
   ".env"
]  // Tell TypeScript what files to compile
}
